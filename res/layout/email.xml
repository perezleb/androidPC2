<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
     
        <RelativeLayout
        	android:id="@+id/navigation_bar" 
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
    	    android:gravity="center"
        	android:background="#75A3FF"        
        	android:paddingBottom="5dp">

   			<Button
   		    	android:id="@+id/progress_nav_button"
	   		    android:layout_width="100dip"
   			    android:layout_height="42dip"
   			    android:layout_marginTop="5dp"
   		    	android:background="@drawable/nav_button_selector"
   		    	android:textColor="#FFFFFF"
   				android:textStyle="bold"
   				android:textSize="18sp"   		    
   		    	android:text="Progress" />

   			<Button
   		    	android:id="@+id/make_gift_nav_button" 
   		    	android:layout_width="100dip"
   		    	android:layout_height="42dip"
   		    	android:layout_toRightOf="@id/progress_nav_button"
   		    	android:layout_marginLeft="5dp"
   		    	android:layout_marginTop="5dp"
   		    	android:background="@drawable/nav_button_selector"
   		    	android:textColor="#FFFFFF"
   				android:textStyle="bold"
   				android:textSize="18sp"
   		    	android:text="Make Gift"/>
   			<Button
   		    	android:id="@+id/email_nav_button" 
   		    	android:layout_width="100dip"
	   		    android:layout_height="42dip"
   			    android:layout_toRightOf="@id/make_gift_nav_button"
   			    android:layout_marginLeft="5dp"
   		    	android:layout_marginTop="5dp"
   		    	android:background="@drawable/nav_button_selected"
	   		    android:textColor="#FFFFFF"
   				android:textStyle="bold"
   				android:textSize="18sp"
   		    	android:text="Email"/>
   		             
    	</RelativeLayout>
        
        <Button
        	android:id="@+id/send_to_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/navigation_bar"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="22dp"
        	android:text="To:"
        	android:textSize="16sp" />
    
    	<EditText 
        	android:id="@+id/send_to_emails"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@id/send_to_button"
        	android:layout_below="@+id/navigation_bar"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="12dp"
        	android:layout_marginRight="22dp"
        	android:scrollHorizontally="true"/>
    	
    	<TextView 
        	android:id="@+id/subject_email_label"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_below="@id/send_to_button"
        	android:layout_marginLeft="22dp"
        	android:layout_marginTop="15dp"
        	android:textSize="16sp"
        	android:text="Subject:"/>
    
    	<EditText 
        	android:id="@+id/email_subject"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_below="@id/subject_email_label"
        	android:layout_marginTop="5dp"
        	android:layout_marginLeft="22dp"
        	android:layout_marginRight="22dp"/>
    	
    	<TextView 
    	    android:id="@+id/message_body_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/email_subject"
            android:textSize="15sp"
            android:text="Message Body"/>
        
        <EditText
            android:id="@+id/email_content"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_below="@id/message_body_label"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:scrollbars="vertical" />
        
        <Button
            android:id="@+id/send_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:text="Send Email"/>
    </RelativeLayout>
    
</ScrollView>